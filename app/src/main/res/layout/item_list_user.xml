<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        
        <variable
            name="viewHolder"
            type="vn.hcmute.lab7.adapters.ListUserAdapter.MyViewHolder" />
        
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@{viewHolder.stt, default=stt}"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="@{viewHolder.firstName, default=firstName}"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="@{viewHolder.lastName, default=lastName}"/>

    </LinearLayout>
</layout>